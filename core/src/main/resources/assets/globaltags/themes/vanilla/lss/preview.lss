TagPreview {
    height: fit-content;
    width: fit-content;
    orientation: horizontal;

    .tag {
        scale-to-fit: false;
        max-lines: 1;
        margin-left: 2;
    }

    .global-icon {
        margin-left: 1;
        margin-right: 1;
        height: 16;
        width: height;
    }

    .role-icon {
        margin-left: 2;
        height: 11;
        width: height;
    }
}