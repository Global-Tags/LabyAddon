TagPreview {
    height: fit-content;
    orientation: horizontal;

    .error {
        text-color: red;
        margin-left: 2;
    }

    .icon {
        margin-left: 1;
        margin-right: 3;
        height: 16;
        width: height;
    }

    .staff-icon {
        margin-left: 2;
        height: 11;
        width: height;
    }

    .refresh-button {
        height: 20;
        width: height;
        padding: 0;
        alignment: right;

        .button-icon {
            height: 8;
            width: height;
        }
    }
}