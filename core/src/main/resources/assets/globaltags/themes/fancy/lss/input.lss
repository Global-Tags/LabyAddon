.window {
    left: 50%;
    top: 50%;
    width: 300;
    height: 180;
    alignment-x: center;
    alignment-y: center;

    .ban-header {
        margin-bottom: 10 !important;
    }

    .header {
        left: 50%;
        width: 100%;
        height: 20;
        padding: 0 2 0 2;
        space-between-entries: 2;
        margin-bottom: 30;

        .head {
            width: 16;
            height: width;
            alignment: center;
        }

        .username {
            alignment: center;
        }
    }

    .content {
        width: 100%;
        height: 100%;
        alignment-x: center;
        alignment-y: center;
        overwrite-width: false;

        .label {
            alignment-x: center;
            alignment-y: center;
        }

        .input {
            margin-top: 6;
            margin-bottom: 8;
            width: 200;
            alignment-x: center;
            alignment-y: center;
        }

        .checkbox-wrapper {
            height: 20;
            width: 100%;
            space-between-entries: 4;

            .check-box {
                alignment: center;
            }

            .checkbox-label {
                font-size: 0.8;
                alignment: center;
            }
        }

        .send-button {
            margin-top: 10;
            width: 50;
            height: 20;
            alignment-x: center;
            alignment-y: center;
        }
    }
}